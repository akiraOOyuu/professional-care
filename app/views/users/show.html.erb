<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @user.first_name %>
      </h2>
       <div class="table_wrapper">
       <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.last_name + " " + @user.first_name + " (" + @user.last_name_reading + " " + @user.first_name_reading + ")" %></td>
          </tr>
          <tr>
            <th class="table__col1">登録地</th>
            <td class="table__col2"><%= WorkerPrefecture.find(@user.worker_prefecture_id).name %></td>
          </tr>
          <tr>
            <th class="table__col1">保育士番号</th>
            <td class="table__col2"><%= @user.childcare_worker_number %></td>
          </tr>
          <tr>
            <th class="table__col1">就職日</th>
            <td class="table__col2"><%= "就職日" %></td>
          </tr>
          <tr>
            <th class="table__col1">役職</th>
            <td class="table__col2"><%= "ランク" %></td>
          </tr>
        </tbody>
      </table>

        <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">就業日</th>
            <td class="table__col2"><%= @user_category.employment %></td>
          </tr>
          <tr>
            <th class="table__col1">所属園</th>
            <td class="table__col2"><%= @user_category.affiliation %></td>
          </tr>
          <tr>
            <th class="table__col1">リーダー</th>
            <td class="table__col2"><%= Rank.find(@user_category.rank_id).name %></td>
          </tr>
          <tr>
            <th class="table__col1">履修</th>
            <td class="table__col2"><%= Complete.find(@user_category.complete_id).name %></td>
          </tr>
          
        </tbody>
      </table>
      </div>
      <h2 class="page-heading">
        <%= @user.last_name + " " + @user.first_name %>
        さんの講習一覧
      </h2>
      <div class="user__card">
        <%= render "cares/lecture" %> 
      </div>
    </div>
  </div>
</div>