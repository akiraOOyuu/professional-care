<%= form_with model: @lecture, url: lecture_create_cares_path, method: :post, class: 'registration-main', local: true do |f| %>
  <div class="contents">
    <div class='form-wrap'>
      <div class="form-group">
        <div class="error-alert">
          <ul>
            <% @lecture.errors.full_messages.each do |message| %>
              <li class='error-message'><%= message %></li>
            <% end %>
          </ul>
        </div>
        <div class='form-text-wrap'>
          <label class="form-text">研修分野</label>
          <span class="indispensable">必須</span>
        </div>
         <%= f.select :field_id,  options_for_select(Field.pluck(:name, :id)), {}, { class: "select-box", id: "field" } %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">講義名</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :lecture_name, class:"input-default", id:"lecture_name", placeholder:"幼児教育の重要性と現状"%>
      </div>

      <div class="form-group">
       <div class='form-text-wrap'>
          <label class="form-text">講義時間</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :lecture_time, class:"input-default", id:"lecture_time", placeholder:"90"%>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">講師名</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :instructor_name, class:"input-default", id:"instructor_name", placeholder:"斎藤真紀子※スペース無し記入"%>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">受講日</label>
          <span class="indispensable">必須</span>
        </div>
          <div class='input-birth-wrap'>
            <%= raw sprintf(
                        f.date_select(
                          :lecture_day,
                          class:'select-employment',
                          id:"lecture_day-date",
                          use_month_numbers: true,
                          prompt:'--',
                          start_year: 1980,
                          end_year: Time.now.year,
                          date_separator: '%s'),
                        "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
          </div>
      </div>
      
      <div class='register-btn'>
        <%= f.submit "登録" ,class:"register-sub-btn" %>
      </div>
    </div>
  </div>
<% end %>