<main class="top-main">
  <div class="back-ground-img">
    <%  if user_signed_in? %>
      <%# ログインしているときは以下を表示する %>
      <div class="top-contents">
        <div class="greeting">
            <%= link_to  current_user.first_name, user_path(current_user),class: :greeting__link%>
            さん
        </div> 
        
          <%# // ログインしているときは上記を表示する %>
          <div class="card__wrapper">
            <%# リンク 一覧%>

            <%= link_to "マイページ", user_path(current_user.id), method: :get, class: :nav_top__btn %>
      </div> 
       <% elsif admin_signed_in? %>
      <%# 管理者ログインしていないときは以下を表示する %>

       <%# 検索フォームの表示 %>
        <%= render "cares/search_form" %>
      <%# ユーザーリスト表示 %>
        <%= render "cares/user_list" %> 
      </div>

       <% else %>
        <div>hello </div>
    <% end %>
  </div>
</main>